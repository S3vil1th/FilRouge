
@{
    ViewBag.Title = "AssignRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Assigner un rôle</h2>

@using (Html.BeginForm("AssignRole", "Admin", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-6">
            <label class="control-label"> Nom d'utilisateur</label>
            <input type="text" name="txtUserName" class="form-control" />
        </div>
        <div class="col-md-6">
            <label class="control-label">Selectionnez un rôle</label>
            @Html.DropDownList("RoleName", (IEnumerable<SelectListItem>)ViewBag.Roles, "Select ...")
        </div>
        <div class="row">
            <div class="col-md-12 col-lg-12">
                <button class="btn btn-primary" type="submit">Sauvegarder</button>
            </div>
        </div>
    </div>
}