
@{
    ViewBag.Title = "CreateUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CreateUser</h2>

@using (Html.BeginForm("CreateUser", "Admin", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-6">
            <label class="control-label">Mail utilisateur</label>
            <input type="text" name="txtMail" class="form-control" />
        </div>
        <div class="col-md-6">
            <label class="control-label">Mot de passe</label>
            <input type="password" name="txtPassword" class="form-control" />
        </div>
    </div>
    <div>
        <p>Lors de la création de l'utilisteur ne pas oublier de lui notifier son MDP</p>
    </div>
    <div class="row">
        <div class="col-md-12">
            <button type="submit" value="Submit" class="btn btn-primary">Ajouter</button>
        </div>
    </div>
}